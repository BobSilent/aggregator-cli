{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string",
      "metadata": {
        "description": "The name of the function app that you wish to create."
      }
    },
    "slotName": {
      "type": "string",
      "defaultValue": "staging",
      "metadata": {
        "description": "The name of the function app slot that you wish to create."
      }
    },
    "aggregatorVersion": {
      "type": "string",
      "metadata": {
        "description": "Aggregator version string to use in tags."
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "hostingPlanSkuName": {
      "type": "string",
      "defaultValue": "Y1",
      "metadata": {
        "description": "Name of the resource SKU"
      }
    },
    "hostingPlanSkuTier": {
      "type": "string",
      "defaultValue": "Dynamic",
      "metadata": {
        "description": "Service tier of the resource SKU"
      }
    }
  },
  "variables": {
    "functionAppName": "[parameters('appName')]",
    "hostingPlanName": "[concat(parameters('appName'),'-plan')]",
    "appInsightName": "[concat(parameters('appName'),'-ai')]",
    "functionSlotName": "[concat( parameters('appName'), '-', parameters('slotName') )]",
    "storageAccountName": "[concat('aggregator', uniquestring(resourceGroup().id))]",
    "storageAccountid": "[concat(resourceGroup().id,'/providers/','Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageAccountName')]",
      "apiVersion": "2016-12-01",
      "location": "[parameters('location')]",
      "kind": "Storage",
      "sku": {
        "name": "[parameters('storageAccountType')]"
      },
      "tags": {
        "aggregatorVersion": "[parameters('aggregatorVersion')]"
      }
    },
    {
      "type": "microsoft.insights/components",
      "kind": "web",
      "name": "[variables('appInsightName')]",
      "apiVersion": "2015-05-01",
      "location": "[parameters('location')]",
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', variables('functionAppName'))]": "Resource",
        "aggregatorVersion": "[parameters('aggregatorVersion')]"
      },
      "properties": {
        "Application_Type": "web",
        "applicationId": "[variables('appInsightName')]"
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "kind": "functionapp",
      "apiVersion": "2016-09-01",
      "name": "[variables('hostingPlanName')]",
      "location": "[parameters('location')]",
      "properties": {
      },
      "sku": {
        "name": "[parameters('hostingPlanSkuName')]",
        "tier": "[parameters('hostingPlanSkuTier')]"
      },
      "tags": {
        "aggregatorVersion": "[parameters('aggregatorVersion')]"
      }
    },
    {
      "apiVersion": "2015-08-01",
      "type": "Microsoft.Web/sites",
      "name": "[variables('functionAppName')]",
      "location": "[parameters('location')]",
      "kind": "functionapp",
      "dependsOn": [
        "[resourceId('microsoft.insights/components', variables('appInsightName'))]",
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "tags": {
        "aggregatorVersion": "[parameters('aggregatorVersion')]"
      },
      "properties": {
        "enabled": true,
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
      },
      "resources": [
        {
          "name": "slotConfigNames",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
              "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]"
          ],
          "tags": {
              "displayName": "slotConfigNames"
          },
          "properties": {
              "appSettingNames": [
                  "WEBSITE_CONTENTSHARE"
              ]
          }
        },
        {
          "name": "appsettings",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
              "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]"
          ],
          "properties": {
            "AzureWebJobsDashboard": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]",
            "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]",
            "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]",
            "WEBSITE_CONTENTSHARE": "[toLower(variables('functionAppName'))]",
            "FUNCTIONS_EXTENSION_VERSION": "~2",
            "FUNCTIONS_WORKER_RUNTIME": "dotnet",
            "FUNCTION_APP_EDIT_MODE": "readwrite",
            "WEBSITE_NODE_DEFAULT_VERSION": "6.5.0",
            "SCM_NO_REPOSITORY": "1",
            "SCM_DO_BUILD_DURING_DEPLOYMENT": "false",
            "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(concat('microsoft.insights/components/', variables('appInsightName'))).InstrumentationKey]",
            "Aggregator_VstsTokenType": "to-be-replaced",
            "Aggregator_VstsToken": "to-be-replaced",
            "AzureWebJobsSecretStorageType": "Files"
          }
        }
      ]
    },
    {
        "type": "Microsoft.Web/sites/slots",
        "apiVersion": "2016-08-01",
        "name": "[concat(variables('functionAppName'), '/', parameters('slotName'))]",
        "location": "[parameters('location')]",
        "dependsOn": [
          "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]"
        ],
        "tags": {
          "displayName": "[concat(parameters('slotName'), ' Deployment Slot')]"
        },
        "kind": "functionapp",
        "properties": {
            "enabled": true,
            "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
        },
        "resources": [
          {
            "name": "appsettings",
            "type": "config",
            "apiVersion": "2015-08-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]",
                "[resourceId('Microsoft.Web/sites/slots', variables('functionAppName'), parameters('slotName'))]"
            ],
            "properties": {
              "AzureWebJobsDashboard": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]",
              "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]",
              "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]",
              "WEBSITE_CONTENTSHARE": "[toLower(variables('functionSlotName'))]",
              "FUNCTIONS_EXTENSION_VERSION": "~2",
              "FUNCTIONS_WORKER_RUNTIME": "dotnet",
              "FUNCTION_APP_EDIT_MODE": "readwrite",
              "WEBSITE_NODE_DEFAULT_VERSION": "6.5.0",
              "SCM_NO_REPOSITORY": "1",
              "SCM_DO_BUILD_DURING_DEPLOYMENT": "false",
              "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(concat('microsoft.insights/components/', variables('appInsightName'))).InstrumentationKey]",
              "Aggregator_VstsTokenType": "to-be-replaced",
              "Aggregator_VstsToken": "to-be-replaced",
              "AzureWebJobsSecretStorageType": "Files"
            }
          }
        ]
      }
  ]
}
